<Alloy>
	<TabGroup id="tabGroup"  theme="Theme.Custom" onOpen="handleOpen"  navbarHidden="true" tabBarHidden="true" backgroundColor="white" onFocus="focus" >
        <Tab id="home" navbarHidden="true" >
            <Window id="homeCtrl" navbarHidden="true" >
							<View layout="vertical">
								<Require src="/partials/_navbar" class="navbar" ></Require>
								<View id="homeContent" opacity="0">
									<Require src="/home/home"></Require>
								</View>
							</View>
            </Window>
        </Tab>
        <Tab id="account" navbarHidden="true" >
            <Window id="accountCtrl" navbarHidden="true" title="Tab 2">
							<View layout="vertical">
								<Require src="/partials/_navbar" class="navbar" ></Require>
								<View id="accountContent" opacity="0" >
									<Require src="/profil/profil"></Require>
								</View>
							</View>
            </Window>
        </Tab>
  </TabGroup>
</Alloy>
