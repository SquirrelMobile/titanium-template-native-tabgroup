<Alloy>
	<Window class="container">

		<Require src="partials/_navbar" class="navbar" />
		<Require id="top" src="profil/_top" onOpenMedia="openDialogCamera" />

		<View height="5"/>

		<Widget id="paging" src="de.manumaticx.pagingcontrol" />

		<ScrollableView id="scrollableView">
			<View title="Tab 1" backgroundColor="red">
				<Button bottom="10" class="btn" title="logout" onClick="logout"></Button>
			</View>
			<View title="Tab 2" backgroundColor="white">
				<RatingView module="classes/ui/ratingsView" id="rating" />

				<Button class="btn" onClick="getRating" bottom="30">Get rating</Button>
			</View>
		</ScrollableView>

	</Window>
</Alloy>
